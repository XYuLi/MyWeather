<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <!-- 城市名称 -->
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:text="北京"
        android:textColor="@android:color/white"
        android:textSize="40sp"/>
    <!-- 发布时间 -->
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/city"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="今天18:25发布"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>
    <!-- 湿度信息 -->
    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/time"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:text="湿度：57%"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>
    <!-- PM2.5整体信息快 -->
    <LinearLayout
        android:id="@+id/pm2_5_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <!-- PM2.5详情 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp">
            <!-- PM2.5文字详情 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- PM2.5 -->
                <TextView
                    android:id="@+id/pm2_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="PM2.5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
                <!-- PM2.5数值 -->
                <TextView
                    android:id="@+id/pm_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:text="220"/>
            </LinearLayout>
            <!-- PM2.5图片 -->
            <ImageView
                android:id="@+id/pm2_5_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/biz_plugin_weather_0_50"/>
        </LinearLayout>
        <!-- 污染等级 -->
        <TextView
            android:id="@+id/pm2_5_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="重度污染"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>
    <!-- 今日天气信息快 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp">
        <!--图片-->
        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/biz_plugin_weather_qing"/>
        <!--星期-->
        <TextView
            android:id="@+id/week_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="今天 星期三"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--温度范围-->
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/week_today"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="-2℃~-7℃"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>
        <!--天气情况-->
        <TextView
            android:id="@+id/climate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--风向-->
        <TextView
            android:id="@+id/fengxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/climate"
            android:layout_toRightOf="@id/weather_img"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="风向 东北风"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--风力-->
        <TextView
            android:id="@+id/fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fengxiang"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="风力 7级"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>
